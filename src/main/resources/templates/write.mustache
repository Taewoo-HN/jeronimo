<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{formTitle}}</title>
    <link rel="stylesheet" href="/css/bbs.css">
    <link rel="icon" href = "/img/favicon.png" type = "image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <link rel="stylesheet" href="/css/rootstyle.css" type="text/css">
    <style>
        body {
            padding-top: 4rem;
        }
        .container {
            max-width: 800px;
            margin: 2rem auto;
        }
    </style>
</head>
<body>
{{>layout/navbar}}
{{>layout/sidebar}}

<div class="container">
    <h1 id="form-title" class="mb-4">{{formTitle}}</h1>
    <form id="post-form" method="post" action="{{actionUrl}}">
        {{#post.id}}
            <input type="hidden" name="_method" value="PUT">
        {{/post.id}}
        <div class="mb-3">
            <label for="stock" class="form-label">주식종목</label>
            <input type="text" id="stock" name="stock" class="form-control" value="{{#post.stock}}{{post.stock}}{{/post.stock}}" />
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">제목</label>
            <input type="text" id="title" name="title" class="form-control" value="{{#post.title}}{{post.title}}{{/post.title}}" />
        </div>
        <div class="mb-3">
            <label for="writer" class="form-label">작성자</label>
            <input type="text" id="writer" name="writer" class="form-control" value="{{#post.writer}}{{post.writer}}{{/post.writer}}" />
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">내용</label>
            <textarea id="content" name="content" class="form-control" rows="5">{{#post.content}}{{post.content}}{{/post.content}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">저장</button>
    </form>
</div>

<script>
    const postId = new URLSearchParams(window.location.search).get('id');
    if (postId) {
        document.getElementById('form-title').textContent = '수정하기';
        document.getElementById('post-form').action = `/posts/edit/${postId}`;
    } else {
        document.getElementById('form-title').textContent = '글쓰기';
        document.getElementById('post-form').action = '/posts';
    }
</script>

{{>layout/chatbot}}
{{>footer}}
</body>
</html>