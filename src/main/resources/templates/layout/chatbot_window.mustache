{{>layout/header}}
<!-- modalContent.html -->
<body class="bg-gray-100">
<div class="right-modal shadow-lg fixed inset-0 flex items-center justify-center p-4">
    <div class="modal-content bg-white rounded-lg shadow-lg w-full max-w-lg relative">
        <div class="flex justify-between items-center p-4 border-b">
            <h2 class="text-lg font-semibold">AI Stock Helper</h2>
            <button id="closeWindowBtn" class="text-gray-500 hover:text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="chat-container p-4 pb-20">
            <div id="messages" class="message-list mb-4">
                <div class="message bot-message">안녕하세요! AI 챗봇입니다.</div>
                <div class="message bot-message">무엇을 도와드릴까요?</div>
            </div>
            <div class="input-group fixed bottom-0 left-0 right-0 flex items-center p-3 bg-white border-t">
                <input type="text" id="messageInput" class="form-control flex-1 p-2 border rounded" placeholder="메시지를 입력하세요"/>
                <button id="sendButton" class="btn btn-warning ml-2">전송</button>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('closeWindowBtn').addEventListener('click', function() {
        window.close();
    });
</script>
</body>
{{>layout/footer}}