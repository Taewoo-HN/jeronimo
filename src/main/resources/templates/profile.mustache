<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile Card</title>
    <script src="https://kit.fontawesome.com/ebab3f7b31.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        .card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            overflow: hidden;
            width: 300px;
        }
        .header {
            background-color: #3498db;
            color: white;
            padding: 20px;
            text-align: center;
        }
        .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: white;
            margin: 0 auto 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 48px;
            color: #3498db;
        }
        .name {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .role {
            opacity: 0.8;
        }
        .content {
            padding: 20px;
        }
        .info {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }
        .info img {
            width: 20px;
            height: 20px;
            margin-right: 10px;
        }
    </style>
</head>
<body>
<div class="card">
    <div class="header">
        <div class="avatar" id="avatar"></div>
        <div class="name" id="userName"></div>
        <div class="role" id="userRole"></div>
    </div>
    <div class="content">
        <div class="info">
            <i class="fa-solid fa-envelope"></i> <!-- 이메일 아이콘 -->
            <span id="userEmail"></span>
        </div>
        <div class="info">
            <i class="fa-solid fa-phone"></i> <!-- 전화 아이콘 -->
            <span id="userPhone"></span>
        </div>
        <div class="info">
            <i class="fa-solid fa-user"></i> <!-- 사용자 ID 아이콘 -->
            <span id="userId"></span>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        fetch('/profile/api')
            .then(response => {
                if (!response.ok) {
                    throw new Error('User not authenticated');
                }
                return response.json();
            })
            .then(user => {
                document.getElementById('avatar').textContent = user.userName.charAt(0).toUpperCase();
                document.getElementById('userName').textContent = user.userName;
                document.getElementById('userRole').textContent = user.role || 'User';
                document.getElementById('userEmail').textContent = user.email || 'Not provided';
                document.getElementById('userPhone').textContent = user.phoneNumber || 'Not provided';
                document.getElementById('userId').textContent = user.userId || 'Not provided';
            })
            .catch(error => {
                console.error('Error fetching user profile:', error);
                window.location.href = '/login';
            });
    });
</script>
</body>
</html>